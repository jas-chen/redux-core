{
  "name": "universal-counter-rx",
  "version": "0.1.0",
  "description": "Universal Counter with redux-core",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "start": "npm run build & npm run server",

    "build-server": "NODE_ENV=production webpack -p --config webpack.config.server.js --devtool source-map --output-pathinfo --progress --display-modules",
    "build-client": "NODE_ENV=production webpack --config webpack.config.client.js --devtool source-map --output-pathinfo --progress --display-modules",
    "server": "NODE_ENV=production node ./build/server/server.js",

    "build-server-watch": "webpack --config -d webpack.config.server.js --progress --watch",
    "build-client-watch": "webpack-dev-server --config webpack.config.client.js --inline --colors",
    "dev": "nodemon ./build/server/server.js --watch build/server",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jas Chen",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.19",
    "babel-core": "^5.8.19",
    "babel-loader": "^5.3.2",
    "express": "^4.13.1",
    "json-loader": "^0.5.2",
    "nodemon": "^1.4.0",
    "react": "^0.13.3",
    "redux-core": "^0.1.1",
    "rimraf": "^2.4.2",
    "rx-lite": "^2.5.2",
    "rx-lite-joinpatterns": "^2.5.2",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  }
}
